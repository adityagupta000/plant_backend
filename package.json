{
  "name": "backend",
  "version": "1.0.0",
  "description": "Plant Health Monitoring Backend",
  "main": "src/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon --config nodemon.json src/server.js",
    "dev:load-test": "cross-env LOAD_TEST=true nodemon --config nodemon.json src/server.js",
    "start": "node src/server.js",
    "start:load-test": "cross-env LOAD_TEST=true node src/server.js",
    "test": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=test jest --watch --runInBand",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage --runInBand",
    "test:unit": "cross-env NODE_ENV=test jest --testPathPattern=unit --runInBand",
    "test:integration": "cross-env NODE_ENV=test jest --testPathPattern=integration --runInBand",
    "test:e2e": "cross-env NODE_ENV=test jest --testPathPattern=e2e --runInBand",
    "test:auth": "cross-env NODE_ENV=test jest --testPathPattern=auth.test --runInBand",
    "test:prediction": "cross-env NODE_ENV=test jest --testPathPattern=prediction.test --runInBand",
    "test:guest": "cross-env NODE_ENV=test jest --testPathPattern=guest.test --runInBand",
    "test:history": "cross-env NODE_ENV=test jest --testPathPattern=history.test --runInBand",
    "test:debug": "cross-env NODE_ENV=test node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:ci": "cross-env NODE_ENV=test jest --ci --coverage --maxWorkers=2",
    "test:report": "node test-reporter/cli.js all",
    "test:unit:report": "node test-reporter/cli.js unit",
    "test:integration:report": "node test-reporter/cli.js integration",
    "test:e2e:report": "node test-reporter/cli.js e2e",
    "load-test": "powershell.exe -ExecutionPolicy Bypass -File load-tests/run-load-tests.ps1",
    "load-test:baseline": "artillery run --output load-tests/reports/baseline.html load-tests/baseline.yml",
    "load-test:spike": "artillery run --output load-tests/reports/spike.html load-tests/spike.yml",
    "load-test:stress": "artillery run --output load-tests/reports/stress.html load-tests/stress.yml",
    "load-test:realistic": "artillery run --output load-tests/reports/realistic.html load-tests/realistic-scenario.yml",
    "load-test:quick": "artillery quick --count 10 --num 50 load-tests/baseline.yml",
    "check:redis": "redis-cli ping || echo 'Redis not running'",
    "start:redis": "docker run -d -p 6379:6379 --name plant-health-redis redis:alpine"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "exceljs": "^4.4.0",
    "express": "^5.2.1",
    "express-rate-limit": "^7.5.0",
    "file-type": "^16.5.4",
    "form-data": "^4.0.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.4.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pdfkit": "^0.15.0",
    "pg": "^8.13.1",
    "rate-limit-redis": "^4.3.1",
    "sequelize": "^6.37.5",
    "sqlite3": "^5.1.7",
    "uuid": "^11.0.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "artillery": "^2.0.30",
    "cross-env": "^10.1.0",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "jest-html-reporter": "^3.10.2",
    "nodemon": "^3.1.11",
    "supertest": "^7.1.3"
  },
  "jest-html-reporter": {
    "pageTitle": "Plant Health Backend Test Report",
    "outputPath": "tests/reports/test-report.html",
    "includeFailureMsg": true,
    "includeConsoleLog": true,
    "styleOverridePath": null,
    "customScriptPath": null,
    "theme": "darkTheme",
    "logo": null,
    "executionTimeWarningThreshold": 5,
    "dateFormat": "yyyy-mm-dd HH:MM:ss"
  }
}
